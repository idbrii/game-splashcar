# Unifies coding style for different editors and IDEs.
# See also http://EditorConfig.org

root = true

# Avoid using [*] so we don't mess up filetypes we don't know about.

[*.{gd,h,c,hpp,cpp,inl,lua,bat}]
indent_style = space
indent_size = 4

charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true


[*.py]
indent_size = 4
indent_style = space

[Makefile]
indent_style = tab
